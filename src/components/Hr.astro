---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  variant?: "default" | "hero";
}

const {
  noPadding = false,
  ariaHidden = true,
  variant = "default",
} = Astro.props;
---

<div
  class={`${variant === "hero" ? "max-w-full" : "max-w-3xl"} mx-auto ${variant === "hero" ? "px-12" : noPadding ? "px-0" : "px-4"}`}
>
  {
    variant === "hero" ? (
      <hr class="h-[72px] bg-black" aria-hidden={ariaHidden} />
    ) : (
      <hr class="border-skin-line" aria-hidden={ariaHidden} />
    )
  }
</div>
